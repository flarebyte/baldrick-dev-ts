{
	"name": "baldrick-dev-ts",
	"description": "CLI for TypeScript package development",
	"keywords": ["cli", "markdown", "release"],
	"version": "1.0.0",
	"author": {
		"name": "Olivier Huin <olih@users.noreply.github.com>",
		"url": "https://github.com/olih"
	},
	"license": "MIT",
	"homepage": "https://github.com/flarebyte/baldrick-dev-ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/flarebyte/baldrick-dev-ts.git"
	},
	"bugs": "https://github.com/flarebyte/baldrick-dev-ts/issues",
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/src/cli.mjs",
			"default": "./dist/src/cli.mjs",
			"types": "./dist/src"
		},
		"./package.json": {
			"default": "./package.json"
		}
	},
	"main": "./dist/src/index.mjs",
	"files": ["dist/src", "src"],
	"bin": {
		"baldrick": "dist/src/cli.mjs",
		"baldrick-dev-ts": "dist/src/cli.mjs"
	},
	"engines": {
		"node": ">=22"
	},
	"scripts": {
		"build": "npx -p typescript tsc --outDir dist",
		"doc": "npx typedoc --json report/doc.json --pretty src/index.ts && npx baldrick-doc-ts typedoc --json-source report/doc.json && baldrick-doc-ts parse -f internal ngram && yarn md:fix",
		"github": "gh repo edit --delete-branch-on-merge --enable-squash-merge",

		"md": "npx baldrick-dev-ts markdown check && npx baldrick-dev-ts markdown check -s .github/",
		"md:fix": "npx baldrick-dev-ts markdown fix && npx baldrick-dev-ts markdown fix -s .github/",
		"prebuild": "yarn reset",
		"ready": "yarn md && yarn outdated && yarn audit && yarn release:check",
		"reset": "rm -rf dist; rm -rf report",
		"release:check": "npx baldrick-dev-ts release check",
		"release:ci": "npx baldrick-dev-ts release ci",
		"h": "cat commands.txt",
		"norm": "npx baldrick-ts generate -f cli npx -ga 'flarebyte' -ch 'Flarebyte.com' -cy 2021 -l MIT -b baldrick && yarn md:fix",
		"norm:g": "baldrick-ts generate -f cli npx -ga 'flarebyte' -ch 'Flarebyte.com' -cy 2021 -l MIT -b baldrick && yarn md:fix",
		"cli": "npx -p tsx@latest tsx src/cli.mts",
		"pretest:ci": "yarn build",
    "test:ci": "node --test --test-reporter=spec dist/test/**/*.test.js",
    "test:cov": "yarn build && npx -p c8@latest c8 -r text -r lcov -r html node --test dist/test/**/*.test.js",
    "test:pest": "npx -p baldrick-pest@latest baldrick-pest test -f pest-spec/markdown-validate.yaml && npx -p baldrick-pest@latest baldrick-pest test -f pest-spec/markdown-fix.yaml && npx -p baldrick-pest@latest baldrick-pest test -f pest-spec/release-check.yaml",
    "lint": "npx -p @biomejs/biome@latest biome lint src test .github",
    "lint:fix": "npx -p @biomejs/biome@latest biome check --write src test .github",
    "lint:ci": "npx -p @biomejs/biome@latest biome check src test .github"
  },
  "dependencies": {
    "baldrick-tsconfig-es2024": "*",
    "commander": "^14.0.1",
    "diff": "^8.0.2",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.2",
    "prettier": "^3.6.2",
    "remark-cli": "^12.0.1",
    "remark-gfm": "^4.0.1",
    "remark-lint-emphasis-marker": "^4.0.1",
    "remark-lint-list-item-indent": "^4.0.1",
    "remark-lint-list-item-spacing": "^5.0.1",
    "remark-lint-maximum-heading-length": "^4.1.1",
    "remark-lint-maximum-line-length": "^4.1.1",
    "remark-lint-ordered-list-marker-style": "^4.0.1",
    "remark-lint-ordered-list-marker-value": "^4.0.1",
    "remark-lint-strong-marker": "^4.0.1",
    "remark-lint-unordered-list-marker-style": "^4.0.1",
    "remark-preset-lint-consistent": "^6.0.1",
    "remark-preset-lint-recommended": "^7.0.1",
    "tiny-glob": "^0.2.9",
    "tslib": "^2.8.1",
    "vfile-reporter": "^8.1.1",
    "vfile-reporter-json": "^4.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.5.2"
  },
	"peerDependencies": {
		"typescript": "5.x"
	}
}
